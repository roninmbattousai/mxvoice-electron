{
  "SDKVersion": 2,
  "Name": "Mx Voice Controller",
  "Description": "Control Mx Voice audio software",
  "Author": "Mx Voice Team",
  "CodePath": "code.js",
  "Category": "Audio",
  "CategoryIcon": "category",
  "UUID": "com.mxvoice.streamdeck",
  "Version": "1.0.0",
  "Software": {
    "MinimumVersion": "5.0"
  },
  "OS": [
    {
      "Platform": "windows",
      "MinimumVersion": "10"
    },
    {
      "Platform": "mac",
      "MinimumVersion": "10.14"
    }
  ],
  "Actions": [
    {
      "Name": "Play/Pause",
      "UUID": "com.mxvoice.streamdeck.playpause",
      "Icon": "playpause",
      "Tooltip": "Play or pause the current audio",
      "States": [
        {
          "Image": "playpause",
          "TitleAlignment": "bottom",
          "ShowTitle": true
        }
      ]
    },
    {
      "Name": "Stop",
      "UUID": "com.mxvoice.streamdeck.stop",
      "Icon": "stop",
      "Tooltip": "Stop audio playback",
      "States": [
        {
          "Image": "stop",
          "TitleAlignment": "bottom",
          "ShowTitle": true
        }
      ]
    },
    {
      "Name": "Volume Up",
      "UUID": "com.mxvoice.streamdeck.volumeup",
      "Icon": "volumeup",
      "Tooltip": "Increase volume",
      "States": [
        {
          "Image": "volumeup",
          "TitleAlignment": "bottom",
          "ShowTitle": true
        }
      ]
    },
    {
      "Name": "Volume Down",
      "UUID": "com.mxvoice.streamdeck.volumedown",
      "Icon": "volumedown",
      "Tooltip": "Decrease volume",
      "States": [
        {
          "Image": "volumedown",
          "TitleAlignment": "bottom",
          "ShowTitle": true
        }
